<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="@dimen/app_padding"
                android:background="@color/app_bg">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_button"
            android:id="@+id/btnSearch" android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:onClick="btnSearch_Clicked"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtKey"
            android:layout_toLeftOf="@+id/btnSearch"
            android:layout_alignParentLeft="true"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            android:layout_below="@+id/txtKey" android:layout_alignParentBottom="true"/>
</RelativeLayout>